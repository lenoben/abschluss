<!-- Card 4 -->
<!-- <div class="bg-black rounded-lg p-4 w-3/4 text-white"> -->
    <div class="shadow-lg rounded-lg p-2 w-3/4 text-white bg-transparent">
    <p class="text-lg">
      <%= card.content %>
    </p>
    <p class="text-lg mt-2 mb-2 text-blue-500">User: <%= card.site_user.name %></p>
    <div>
        <% if (card.hasOwnProperty('ffn') || card.hasOwnProperty("nmc")) { %>
            <p class="text-lg font-bold mt-2">
                <% if (card.hasOwnProperty('nmc') && card.nmc.length !== 0) { %>
                    NMC
                <% } %>
                <% if (card.hasOwnProperty('ffn') && card.ffn.length !== 0) { %>
                    FFN
                <% } %>
            </p>
            <div class="flex gap-2 mt-2">
                <% if (card.hasOwnProperty('nmc') && card.nmc.length !== 0) { %>
                    <% if (card.nmc[0].result == 1) { %>
                        <button class="w-24 h-9 flex items-center justify-center bg-green-950 rounded">
                            positive
                        </button>
                        <% } else { %>
                            <button class="w-24 h-9 flex items-center justify-center bg-red-950 rounded">
                                negative
                            </button>
                            <% } %>
                    <% } %>
                    <% if (card.hasOwnProperty('ffn') && card.ffn.length !== 0) { %>
                        <% if (card.ffn[0].result == 1) { %>
                            <button class="w-24 h-9 flex items-center justify-center bg-green-950 rounded">
                                positive
                            </button>
                            <% } else { %>
                                <button class="w-24 h-9 flex items-center justify-center bg-red-950 rounded">
                                    negative
                                </button>
                                <% } %>
                        <% } %>
            </div>
        <% } %>
        <% if (card.hasOwnProperty('logreg') || card.hasOwnProperty("random_forest")) { %>
            <p class="text-lg font-bold mt-2">
                <% if (card.hasOwnProperty('logreg') && card.logreg.length !== 0) { %>
                    Logistic Regression
                <% } %>
                <% if (card.hasOwnProperty('random_forest') && card.random_forest.length !== 0) { %>
                    Random Forest
                <% } %>
            </p>
            <div class="flex gap-2 mt-2">
                <% if(card.hasOwnProperty("logreg") && card.logreg.length !==0) { %>
                    <% if(card.logreg[0].result == 1 ) { %>
                        <button class="w-24 h-9 flex items-center justify-center bg-green-950 rounded">
                            positive
                        </button>
                        <button class="w-24 h-9 flex items-center justify-center bg-green-950 rounded">
                            <%= card.logreg[0].probability * 100 %>%
                        </button>
                        <% } else { %>
                            <button class="w-24 h-9 flex items-center justify-center bg-red-950 rounded">
                         negative
                     </button>
                     <button class="w-24 h-9 flex items-center justify-center bg-red-950 rounded">
                         <%= card.logreg[0].probability * 100 %>%
                     </button>
                            <% } %>
                    <% } %>
                    <% if(card.hasOwnProperty("random_forest") && card.random_forest.length !==0) { %>
                    <% if(card.random_forest[0].result == 1 ) { %>
                        <button class="w-24 h-9 flex items-center justify-center bg-green-950 rounded">
                            positive
                        </button>
                        <button class="w-24 h-9 flex items-center justify-center bg-green-950 rounded">
                            <%= card.random_forest[0].probability * 100 %>%
                        </button>
                        <% } else { %>
                            <button class="w-24 h-9 flex items-center justify-center bg-red-950 rounded">
                         negative
                     </button>
                     <button class="w-24 h-9 flex items-center justify-center bg-red-950 rounded">
                         <%= card.random_forest[0].probability * 100 %>%
                     </button>
                            <% } %>
                    <% } %>
            </div>
        <% } %>
    </div>
  </div>